<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>

  <system.serviceModel>
    <client>
      <endpoint name="ChatService"
                behaviorConfiguration="ChatServiceBehavior"
                address="net.tcp://localhost:9000/ChatService"
                binding="netTcpBinding"
                bindingConfiguration="ServiceBinding"
                contract="Chat.Core.Communication.Services.IChatService" />
    </client>

    <behaviors>
      <endpointBehaviors>
        <behavior name="ChatServiceBehavior">
          <clientCredentials>
            <clientCertificate findValue="46E2E725A6AF5C5CE4D4F09795FD8CCB60FC3AE5" storeLocation="LocalMachine" storeName="My" x509FindType="FindByThumbprint" />
            <serviceCertificate>
              <authentication certificateValidationMode="None" revocationMode="NoCheck" />
            </serviceCertificate>
          </clientCredentials>
        </behavior>
      </endpointBehaviors>
    </behaviors>

    <bindings>
      <netTcpBinding>
        <binding name="ServiceBinding"
                 closeTimeout="00:00:10"
                 openTimeout="00:00:10"
                 receiveTimeout="00:10:00"
                 sendTimeout="00:01:00"
                 listenBacklog="10"
                 maxBufferPoolSize="524288"
                 maxBufferSize="65536"
                 maxConnections="10"
                 maxReceivedMessageSize="65536">
          <reliableSession ordered="true"
                           inactivityTimeout="00:10:00"
                           enabled="false" />
          <security mode="TransportWithMessageCredential">
            <transport clientCredentialType="None" protectionLevel="EncryptAndSign" />
          </security>
        </binding>
      </netTcpBinding>
    </bindings>
  </system.serviceModel>
</configuration>